# Enforce pnpm usage
engine-strict=true

# Use pnpm store
store-dir=.pnpm-store

# Auto-install peers
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false

# Hoist pattern for better compatibility
shamefully-hoist=false

# Lockfile settings
lockfile=true

# Save exact versions
save-exact=false
