{
  "name": "news.plantdoctor.app",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "bash scripts/install-hooks.sh || true",
    "hooks:install": "bash scripts/install-hooks.sh",
    "//": "=== DEVELOPMENT ===",
    "dev": "pnpm stop && next dev --turbopack",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 next build",
    "build:analyze": "ANALYZE=true pnpm build",
    "build:time": "time pnpm build",
    "start": "pnpm stop && next start",
    "stop": "pnpm _killport 3000",
    "// ": "=== CODE QUALITY ===",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --quiet .",
    "lint:actions": "./scripts/check-workflows.sh",
    "type-check": "tsc --noEmit",
    "format": "(pnpm prettify | rg -v -F '(unchanged)' || true) && pnpm lint:fix",
    "prettify": "prettier --write .",
    "//  ": "=== TESTING: UNIT ===",
    "test": "jest",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "//   ": "=== TESTING: E2E ===",
    "e2e": "playwright test",
    "e2e:distributed": "node scripts/distribute-tests-weighted.js",
    "e2e:distributed:enhanced": "node scripts/distribute-tests-weighted-enhanced.js",
    "e2e:health": "node scripts/distributed-test-health-monitor.js",
    "e2e:progress:demo": "node scripts/distributed-test-progress.js",
    "e2e:desktop": "playwright test --project=desktop",
    "e2e:mobile": "playwright test --project=mobile",
    "e2e:tablet": "playwright test --project=tablet",
    "e2e:headed": "playwright test",
    "e2e:debug": "playwright test --debug",
    "e2e:desktop:headed": "playwright test --project=desktop",
    "e2e:mobile:headed": "playwright test --project=mobile",
    "e2e:tablet:headed": "playwright test --project=tablet",
    "test:console": "playwright test tests/e2e/no-console-errors.spec.ts",
    "//    ": "=== TESTING: MDX VALIDATION ===",
    "test:mdx": "jest --testPathPatterns='(blog|guides)-mdx-structure'",
    "test:mdx:structure": "jest --testPathPatterns='mdx-structure'",
    "test:mdx:links": "jest --testPathPatterns='links-validation'",
    "test:mdx:citations": "jest --testPathPatterns='citations-validation'",
    "//     ": "=== TESTING: ACCESSIBILITY ===",
    "test:a11y": "playwright test tests/e2e/a11y.spec.ts",
    "test:a11y:desktop": "playwright test tests/e2e/a11y.spec.ts --project=desktop",
    "test:a11y:mobile": "playwright test tests/e2e/a11y.spec.ts --project=mobile",
    "test:a11y:tablet": "playwright test tests/e2e/a11y.spec.ts --project=tablet",
    "test:a11y:desktop:headed": "playwright test tests/e2e/a11y.spec.ts --project=desktop",
    "test:a11y:mobile:headed": "playwright test tests/e2e/a11y.spec.ts --project=mobile",
    "test:a11y:tablet:headed": "playwright test tests/e2e/a11y.spec.ts --project=tablet",
    "test:a11y:all:headed": "pnpm concurrently \"pnpm test:a11y:desktop:headed\" \"pnpm test:a11y:mobile:headed\" \"pnpm test:a11y:tablet:headed\"",
    "//      ": "=== TESTING: STRUCTURED DATA ===",
    "test:schema": "playwright test tests/e2e/structured-data.spec.ts",
    "test:schema:headed": "playwright test tests/e2e/structured-data.spec.ts",
    "//       ": "=== TESTING: LIGHTHOUSE ===",
    "lh:desktop": "pnpm build && lhci autorun --config=./.lighthouseci/lighthouse.desktop.js",
    "lh:mobile": "pnpm build && lhci autorun --config=./.lighthouseci/lighthouse.mobile.js",
    "lh:tablet": "pnpm build && lhci autorun --config=./.lighthouseci/lighthouse.tablet.js",
    "lh:all": "pnpm concurrently --kill-others-on-fail \"pnpm lh:desktop\" \"pnpm lh:mobile\" \"pnpm lh:tablet\"",
    "lh:ci": "pnpm build && lhci autorun --config=./.lighthouseci/lighthouse.ci.js",
    "lh:themes": "bash scripts/run-theme-lighthouse.sh",
    "test:themes": "THEME_MODE=light pnpm test && THEME_MODE=dark pnpm test",
    "//        ": "=== TESTING: VALIDATION & ALL ===",
    "//         HIERARCHY": "validate:quick (30s) → validate:standard (2min) → validate:complete (5-10min)",
    "validate": "pnpm validate:standard",
    "validate:watch": "nodemon --watch ./src --ext ts,tsx,js,jsx --exec \"pnpm validate:quick\"",
    "validate:full": "pnpm validate:complete",
    "test:all": "pnpm validate:complete",
    "//         ": "=== ENVIRONMENT ===",
    "tdd": "pnpm tdd:watch",
    "tdd:watch": "pnpm concurrently --kill-others-on-fail --prefix-colors \"cyan,magenta,blue,yellow,green\" --prefix \"[{name}]\" --names \"UNIT,TYPE,LINT,E2E,A11Y\" \"jest --watch\" \"tsc --watch --noEmit\" \"nodemon --exec 'pnpm lint' --ext ts,tsx --watch app --watch components --watch lib\" \"nodemon --exec 'pnpm e2e:headed' --ext ts,tsx --watch app --watch components\" \"nodemon --exec 'pnpm test:a11y' --ext ts,tsx --watch app --watch components\"",
    "tdd:quick": "jest --watch --bail --findRelatedTests",
    "//          ": "=== TASK MANAGEMENT ===",
    "task:lock": "tsx scripts/task-management.ts lock",
    "task:unlock": "tsx scripts/task-management.ts unlock",
    "task:list": "tsx scripts/task-management.ts list",
    "task:locks": "tsx scripts/task-management.ts locks",
    "task:cleanup": "tsx scripts/task-management.ts cleanup",
    "//           ": "=== UTILITIES ===",
    "validate:quick": "pnpm check:pm && pnpm concurrently --kill-others-on-fail --prefix-colors \"cyan,magenta,blue\" --prefix \"[{name}]\" --names \"LINT,TYPE,FORMAT\" \"pnpm lint\" \"pnpm type-check\" \"prettier --check .\"",
    "validate:standard": "pnpm validate:quick && pnpm build && pnpm test:coverage",
    "validate:complete": "pnpm validate:standard && pnpm concurrently --kill-others-on-fail --prefix-colors \"cyan,magenta,blue,yellow,green,red\" --prefix \"[{name}]\" --names \"E2E-D,E2E-M,E2E-T,A11Y,SCHEMA,LH\" \"pnpm e2e:desktop\" \"pnpm e2e:mobile\" \"pnpm e2e:tablet\" \"pnpm test:a11y:all\" \"pnpm test:schema\" \"pnpm lh:all\"",
    "validate:complete:headed": "pnpm validate:standard && pnpm concurrently --kill-others-on-fail --prefix-colors \"cyan,magenta,blue,yellow,green,red\" --prefix \"[{name}]\" --names \"E2E-D,E2E-M,E2E-T,A11Y,SCHEMA,LH\" \"pnpm e2e:desktop:headed\" \"pnpm e2e:mobile:headed\" \"pnpm e2e:tablet:headed\" \"pnpm test:a11y:all:headed\" \"pnpm test:schema:headed\" \"pnpm lh:all\"",
    "validate:visual": "pnpm validate:complete:headed",
    "validate:themes": "pnpm test:themes && pnpm e2e:themes",
    "test:viewports": "pnpm concurrently --kill-others-on-fail \"pnpm e2e:desktop\" \"pnpm e2e:mobile\" \"pnpm e2e:tablet\"",
    "test:viewports:headed": "pnpm concurrently --kill-others-on-fail \"pnpm e2e:desktop:headed\" \"pnpm e2e:mobile:headed\" \"pnpm e2e:tablet:headed\"",
    "e2e:themes": "pnpm concurrently \"THEME_MODE=light pnpm e2e\" \"THEME_MODE=dark pnpm e2e\"",
    "e2e:themes:headed": "pnpm concurrently \"THEME_MODE=light pnpm e2e:headed\" \"THEME_MODE=dark pnpm e2e:headed\"",
    "test:a11y:all": "pnpm concurrently \"pnpm test:a11y:desktop\" \"pnpm test:a11y:mobile\" \"pnpm test:a11y:tablet\"",
    "//            ": "=== PROJECT TREE ===",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":25,\"functions\":28,\"lines\":40,\"statements\":38}}'",
    "coverage:report": "open coverage/lcov-report/index.html",
    "test:mutation": "stryker run",
    "test:mutation:incremental": "stryker run --incremental",
    "env:push": "./scripts/env-push.sh",
    "env:pull": "tsx scripts/env-pull.ts",
    "env:sync": "tsx scripts/sync-env-to-vercel.ts",
    "env:push:dry": "tsx scripts/sync-env-to-vercel.ts --dry-run",
    "env:check": "node scripts/find-unused-env-vars.js",
    "env:check:verbose": "node scripts/find-unused-env-vars.js --verbose",
    "webp": "pnpm convert:webp && pnpm compress:webp",
    "convert:webp": "tsx scripts/convert-to-webp.ts",
    "compress:webp": "tsx scripts/compress-webp.ts",
    "compress:webp:high": "tsx scripts/compress-webp.ts -q 90",
    "compress:webp:skip-backup": "tsx scripts/compress-webp.ts -s",
    "check:pm": "tsx scripts/check-package-manager.ts",
    "validate:config": "tsx scripts/validate-config.ts",
    "cache:clean": "rm -rf .next/cache && rm -rf .pnpm-store",
    "cache:webpack": "rm -rf .next/cache/webpack",
    "deploy": "pnpm build && pnpm vercel deploy --prod",
    "update:outdated:prs": "./scripts/update-outdated-prs.sh",
    "_killport": "tsx scripts/killport.ts",
    "_chmod": "chmod +x ./scripts/*.sh",
    "watch:tree": "tsx scripts/watch-tree.ts",
    "tree:generate": "tsx scripts/watch-tree.ts --once",
    "//             ": "=== TASK MANAGEMENT ==="
  },
  "dependencies": {
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "html-entities": "^2.6.0",
    "lucide-react": "^0.546.0",
    "marked": "^16.4.1",
    "marked-footnote": "^1.4.0",
    "next": "15.5.6",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "text-vide": "^1.8.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.6",
    "@octokit/rest": "^22.0.1",
    "@playwright/test": "^1.56.1",
    "@stryker-mutator/core": "^9.3.0",
    "@stryker-mutator/html-reporter": "^3.1.0",
    "@stryker-mutator/jest-runner": "^9.3.0",
    "@stryker-mutator/typescript-checker": "^9.3.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chokidar": "^2.1.7",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/sharp": "^0.32.0",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.2",
    "concurrently": "^9.2.1",
    "critters": "^0.0.25",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "^15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "execa": "^9.6.0",
    "glob": "^12.0.0",
    "husky": "^9.1.7",
    "ignore": "^7.0.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "js-yaml": "^4.1.0",
    "kill-port": "^2.0.1",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "replace-in-file": "^8.3.0",
    "serve": "^14.2.5",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vercel": "^48.8.2"
  },
  "browserslist": [
    "chrome >= 90",
    "firefox >= 88",
    "safari >= 14",
    "edge >= 90"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "whatwg-url": "^11.0.0",
      "tr46": "^4.1.1",
      "on-headers@<1.1.0": ">=1.1.0",
      "tmp@<=0.2.3": ">=0.2.4",
      "js-yaml@<4.1.1": ">=4.1.1"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "jest --bail --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md,mdx}": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    ".github/workflows/*.{yml,yaml}": [
      "actionlint"
    ]
  }
}
